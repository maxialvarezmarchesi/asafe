{
    "compilerOptions": {
        "composite": true,
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": [
        "dist/**",
        "packages/**/tests/**",
        "packages/**/dist/**"
    ],
    "references": [
        {
            "path": "./packages/app"
        },
        {
            "path": "./packages/config"
        },
        {
            "path": "./packages/infra"
        },
        {
            "path": "./packages/server"
        },
        {
            "path": "./packages/utils"
        }
    ]
}